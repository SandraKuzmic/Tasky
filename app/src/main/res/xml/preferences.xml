<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Widget">
        <SwitchPreference
            android:key="pref_show_completed"
            android:title="Show completed"
            android:summary="Show completed tasks in widget"
            android:defaultValue="true"/>
        <ListPreference
            android:key="pref_time_span"
            android:title="Select when to show task"
            android:summary="Time span is relative regarding today"
            android:dialogTitle="Select time span"
            android:entries="@array/time_span_entries"
            android:entryValues="@array/time_span_values"
            android:defaultValue="-1"/>
    </PreferenceCategory>
</PreferenceScreen>