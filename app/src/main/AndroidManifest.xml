<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sandra.tasky">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.HomeScreenActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/search" />
        </activity>

        <activity
            android:name=".activities.TaskActivity"
            android:parentActivityName=".activities.HomeScreenActivity"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeScreenActivity" />
        </activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".activities.HomeScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeScreenActivity" />
        </activity>

        <activity
            android:name=".activities.CategoriesActivity"
            android:label="@string/manage_categories"
            android:parentActivityName=".activities.HomeScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeScreenActivity" />
        </activity>

        <receiver android:name=".widget.TaskWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/task_widget_info" />
        </receiver>

        <!--<receiver-->
            <!--android:name=".receiver.UpdateWidgetReceiver"-->
            <!--android:permission="android.permission.WAKE_LOCK">-->
            <!--<intent-filter>-->
                <!--<action android:name="com.sandra.tasky.widget.UPDATE_WIDGET" />-->
            <!--</intent-filter>-->
        <!--</receiver>-->

        <service
            android:name=".widget.TaskWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <service android:name=".service.NotificationService"
            android:exported="false"/>

        <service android:name=".service.UpdateWidgetService"
            android:exported="false"/>

    </application>

</manifest>